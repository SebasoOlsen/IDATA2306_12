          "raw": "https://localhost:8443/hotels/public/searchByID/1",
          "protocol": "https",
          "host": [
            "localhost"
          ],
          "port": "8443",
          "path": [
            "hotels",
            "public",
            "searchByID",
            "1"
          ]
        }
      }
    },
    {
      "name": "Update Hotel",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": 1,\n  \"name\": \"Updated Hotel\",\n  \"locationType\": \"Urban\",\n  \"room\": [\n    \"Single\",\n    \"Double\"\n  ],\n  \"extraFeature\": [\n    \"Sauna\"\n  ],\n  \"country\": \"Norway\",\n  \"city\": \"Oslo\"\n}"
        },
        "url": {
          "raw": "https://localhost:8443/hotels/admin/updateHotel/1",
          "protocol": "https",
          "host": [
            "localhost"
          ],
          "port": "8443",
          "path": [
            "hotels",
            "admin",
            "updateHotel",
            "1"
          ]
        }
      }
    },
    {
      "name": "Get Random Hotels",
      "request": {
        "method": "GET",
        "url": {
          "raw": "https://localhost:8443/hotels/public/randomHotels?count=3",
          "protocol": "https",
